<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VS2017MasterDetail.Views.ItemDetailPage"
             Title="{Binding Title}"
             xmlns:vm="clr-namespace:VS2017MasterDetail.ViewModels;"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             BindingContext="{Binding Source={x:Static vm:DesignTimeViewModelLocator.ItemDetailPage}}">
    <!--PRISM-CONVERSION-NOTE: The bottom four attributes of our ContentPage tag above were set for Prism; 
        the bottom one, setting the BindingContext, only affects design-time - giving us IntelliSense via 
        Visual Studio - and will not do anything at compile-time or run-time.-->
    <StackLayout Spacing="20" Padding="15">
		<Label Text="{Binding Item.Text}" FontSize="Medium"/>
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
    </StackLayout>
</ContentPage>